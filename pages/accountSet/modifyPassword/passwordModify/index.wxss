.container, page {
  background: #fff;
  font-size: 28rpx;
  color: #333;
}
.integral-item{
  display: flex;
  align-items: center;
  padding: 28rpx ;
  border-bottom:solid 1rpx #eee;
}
.integral-name,.integral-num{
  flex: 1;
  display: flex;
  align-items: center
}
.integral-name text:nth-child(2){
   color: #444;
   margin-left: 10rpx;
}
.integral-num{
  justify-content: flex-end;
  text-align: right
}
.btn-area{
  margin-top: 40rpx;
}
.btn-area button[type='primary']{
  background-color:#4169E1;
  border-color: #4169E1;
  font-size: 30rpx
}
.btn-area button[type='primary'].btn-active{
  background-color:#4169E1;
  border-color: #4169E1; 
}